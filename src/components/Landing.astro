	.port-light {
		animation: portPulse 2s ease-in-out infinite;
	}

	.port-light:nth-child(2) { animation-delay: 0.5s; }
	.port-light:nth-child(3) { animation-delay: 1s; }
	.port-light:nth-child(4) { animation-delay: 1.5s; }

	@keyframes portPulse {
		0%, 100% { opacity: 0.3; }
		50% { opacity: 1; }
	}

	/* CPU core pulse */
	.cpu-core {
		animation: corePulse 3s ease-in-out infinite;
	}

	@keyframes corePulse {
		0%, 100% { opacity: 0.3; }
		50% { opacity: 0.8; }
