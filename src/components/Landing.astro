---
// Futuristic landing page for onprem.in
import WaitlistForm from './WaitlistForm.astro';
---

<div class="landing">
	<!-- Animated circuit/datacenter background -->
	<div class="circuit-bg">
		<svg class="circuit-svg" viewBox="0 0 1920 1080" preserveAspectRatio="xMidYMid slice">
			<defs>
				<!-- Gradient for circuit traces -->
				<linearGradient id="traceGradient" x1="0%" y1="0%" x2="100%" y2="0%">
					<stop offset="0%" stop-color="#44d62c" stop-opacity="0" />
					<stop offset="50%" stop-color="#44d62c" stop-opacity="0.8" />
					<stop offset="100%" stop-color="#44d62c" stop-opacity="0" />
				</linearGradient>

				<!-- Enhanced glow filter -->
				<filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
					<feGaussianBlur stdDeviation="4" result="coloredBlur"/>
					<feMerge>
						<feMergeNode in="coloredBlur"/>
						<feMergeNode in="SourceGraphic"/>
					</feMerge>
				</filter>

				<!-- Stronger glow for accents -->
				<filter id="glowStrong" x="-100%" y="-100%" width="300%" height="300%">
					<feGaussianBlur stdDeviation="6" result="coloredBlur"/>
					<feMerge>
						<feMergeNode in="coloredBlur"/>
						<feMergeNode in="coloredBlur"/>
						<feMergeNode in="SourceGraphic"/>
					</feMerge>
				</filter>

				<!-- Node pulse animation gradient -->
				<radialGradient id="nodeGlow" cx="50%" cy="50%" r="50%">
					<stop offset="0%" stop-color="#44d62c" stop-opacity="0.9" />
					<stop offset="100%" stop-color="#44d62c" stop-opacity="0" />
				</radialGradient>

				<!-- Cyan accent gradient for futuristic look -->
				<linearGradient id="cyanAccent" x1="0%" y1="0%" x2="100%" y2="100%">
					<stop offset="0%" stop-color="#00ffff" stop-opacity="0.6" />
					<stop offset="100%" stop-color="#44d62c" stop-opacity="0.8" />
				</linearGradient>

				<!-- Grid pattern -->
				<pattern id="gridPattern" width="60" height="60" patternUnits="userSpaceOnUse">
					<path d="M 60 0 L 0 0 0 60" fill="none" stroke="#44d62c" stroke-width="0.3" opacity="0.3"/>
				</pattern>

				<!-- Hexagon pattern -->
				<pattern id="hexPattern" width="50" height="43.3" patternUnits="userSpaceOnUse">
					<path d="M25 0 L50 14.43 L50 43.3 L25 57.73 L0 43.3 L0 14.43 Z" fill="none" stroke="#44d62c" stroke-width="0.2" opacity="0.15"/>
				</pattern>
			</defs>

			<!-- Hex grid background layer -->
			<rect width="100%" height="100%" fill="url(#hexPattern)" opacity="0.4" />

			<!-- Static circuit traces (background layer) - enhanced visibility -->
