---
// Futuristic landing page for onprem.in
import WaitlistForm from './WaitlistForm.astro';
---

<div class="landing">
  <!-- Animated Datacenter SVG Background -->
  <div class="bg-overlay" aria-hidden="true">
    <object type="image/svg+xml" data="/datacenter-bg.svg" width="100%" height="100%"></object>
  </div>

	<!-- Main content -->
	<main class="content">
		<!-- Logo/Brand -->
		<div class="brand">
			<div class="logo">
				<img src="/favicon.svg" alt="onprem.in" class="logo-icon" />
				<span class="logo-text">onprem<span class="logo-dot">.in</span></span>
			</div>
		</div>

		<!-- Hero -->
		<div class="hero">
			<div class="status-badge">
				<span class="status-dot"></span>
				<span>Coming Soon</span>
			</div>

			<h1 class="title">
				<span class="title-line">Run on Your Infra.</span>
				<span class="title-line gradient-text">Stay in Control.</span>
			</h1>

			<p class="subtitle">
				Next-generation on-premise software solutions designed for startups and SMBs that demand security, performance, and complete ownership.
			</p>
		</div>

		<!-- Features hint -->
		<div class="features">
			<div class="feature">
				<div class="feature-icon">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
						<path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
					</svg>
				</div>
				<span>Secure</span>
			</div>
			<div class="feature">
				<div class="feature-icon">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
						<path d="M13 10V3L4 14h7v7l9-11h-7z"/>
					</svg>
				</div>
				<span>Fast</span>
			</div>
			<div class="feature">
				<div class="feature-icon">
					<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
						<path d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
					</svg>
				</div>
				<span>Self-Hosted</span>
			</div>
		</div>

		<!-- Waiting List -->
		<div class="waiting-list">
			<WaitlistForm id="landing" highlightHint />
		</div>
	</main>
</div>

<style>
	.landing {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		position: relative;
		overflow: hidden;
		padding-top: 5rem;
		isolation: isolate;
	}

	/* Overlay gradient for depth */
	.bg-overlay {
		position: absolute;
		inset: 0;
		background: radial-gradient(ellipse at center, transparent 0%, rgba(10, 10, 15, 0.35) 50%, rgba(10, 10, 15, 0.6) 100%);
		pointer-events: none;
		z-index: 1;
	}

	/* Data signals glow animation */
	.signal {
		filter: drop-shadow(0 0 6px #44d62c);
	}

	.signal-1 { opacity: 0.9; }
	.signal-2 { opacity: 0.8; }
	.signal-3 { opacity: 0.85; }
	.signal-4 { opacity: 0.75; }
	.signal-5 { opacity: 0.8; }

	/* LED blinking animations */
	.led {
		animation: ledBlink 1s ease-in-out infinite;
	}

	.led-1 { animation-delay: 0s; }
	.led-2 { animation-delay: 0.15s; }
	.led-3 { animation-delay: 0.3s; }
	.led-4 { animation-delay: 0.45s; }
	.led-5 { animation-delay: 0.6s; }
	.led-6 { animation-delay: 0.75s; }
	.led-7 { animation-delay: 0.1s; }
	.led-8 { animation-delay: 0.25s; }
	.led-9 { animation-delay: 0.4s; }
	.led-10 { animation-delay: 0.55s; }
	.led-11 { animation-delay: 0.7s; }
	.led-12 { animation-delay: 0.85s; }

	@keyframes ledBlink {
		0%, 100% { opacity: 1; fill: #44d62c; }
		50% { opacity: 0.2; fill: #2ea318; }
	}

	/* Port lights animation */
	.port-light {
		animation: portPulse 2s ease-in-out infinite;
	}

	.port-light:nth-child(2) { animation-delay: 0.5s; }
	.port-light:nth-child(3) { animation-delay: 1s; }
	.port-light:nth-child(4) { animation-delay: 1.5s; }

	@keyframes portPulse {
		0%, 100% { opacity: 0.3; }
		50% { opacity: 1; }
	}

	/* CPU core pulse */
	.cpu-core {
		animation: corePulse 3s ease-in-out infinite;
	}

	@keyframes corePulse {
		0%, 100% { opacity: 0.3; }
		50% { opacity: 0.8; }
	}

	/* Binary text animation */
	.binary {
		animation: binaryFade 4s ease-in-out infinite;
	}

	.binary-1 { animation-delay: 0s; }
	.binary-2 { animation-delay: 1s; }
	.binary-3 { animation-delay: 2s; }
	.binary-4 { animation-delay: 3s; }

	@keyframes binaryFade {
		0%, 100% { opacity: 0.05; }
		50% { opacity: 0.2; }
	}

	/* Connection lines animation */
	.connection-line {
		animation: dashMove 3s linear infinite;
	}

	@keyframes dashMove {
		0% { stroke-dashoffset: 0; }
		100% { stroke-dashoffset: 16; }
	}

	/* Node pulse animation */
	.node {
		animation: nodePulse 4s ease-in-out infinite;
	}

	.circuit-nodes .node:nth-child(odd) { animation-delay: 0s; }
	.circuit-nodes .node:nth-child(even) { animation-delay: 2s; }

	@keyframes nodePulse {
		0%, 100% { opacity: 0.3; r: 4; }
		50% { opacity: 0.7; r: 6; }
	}

	/* Server unit activity */
	.server-unit {
		animation: serverActivity 2s ease-in-out infinite;
	}

	.server-unit:nth-child(2) { animation-delay: 0.2s; }
	.server-unit:nth-child(3) { animation-delay: 0.4s; }
	.server-unit:nth-child(4) { animation-delay: 0.6s; }
	.server-unit:nth-child(5) { animation-delay: 0.8s; }
	.server-unit:nth-child(6) { animation-delay: 1s; }
	.server-unit:nth-child(7) { animation-delay: 1.2s; }

	@keyframes serverActivity {
		0%, 100% { opacity: 0.2; }
		50% { opacity: 0.5; }
	}

	/* Background effects */
	.bg-glow {
		position: absolute;
		border-radius: 50%;
		filter: blur(120px);
		opacity: 0.35;
		pointer-events: none;
		animation: float 20s ease-in-out infinite;
		z-index: 2;
	}

	.bg-glow-1 {
		width: 600px;
		height: 600px;
		background: radial-gradient(circle, #44d62c 0%, transparent 70%);
		top: -200px;
		right: -100px;
		animation-delay: 0s;
	}

	.bg-glow-2 {
		width: 500px;
		height: 500px;
		background: radial-gradient(circle, #2ea318 0%, transparent 70%);
		bottom: -150px;
		left: -100px;
		animation-delay: -7s;
	}

	.bg-glow-3 {
		width: 400px;
		height: 400px;
		background: radial-gradient(circle, #44d62c 0%, transparent 70%);
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		animation-delay: -14s;
		opacity: 0.15;
	}

	@keyframes float {
		0%, 100% { transform: translate(0, 0) scale(1); }
		33% { transform: translate(30px, -30px) scale(1.1); }
		66% { transform: translate(-20px, 20px) scale(0.9); }
	}

	/* Particles */
	.particles {
		position: absolute;
		inset: 0;
		pointer-events: none;
		overflow: hidden;
		z-index: 3;
	}

	.particle {
		position: absolute;
		width: 3px;
		height: 3px;
		background: #44d62c;
		border-radius: 50%;
		left: var(--x);
		bottom: -20px;
		animation: rise var(--duration) linear infinite;
		animation-delay: var(--delay);
		opacity: 0;
		box-shadow: 0 0 6px #44d62c;
	}

	@keyframes rise {
		0% {
			bottom: -20px;
			opacity: 0;
		}
		10% {
			opacity: 0.5;
		}
		90% {
			opacity: 0.5;
		}
		100% {
			bottom: 100%;
			opacity: 0;
		}
	}

	/* Content */
	.content {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		position: relative;
		z-index: 10;
		text-align: center;
		gap: 2rem;
	}

	/* Brand */
	.brand {
		animation: fadeInDown 0.8s ease-out;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.logo-icon {
		width: 48px;
		height: 48px;
		object-fit: contain;
	}

	.logo-text {
		font-size: 1.75rem;
		font-weight: 600;
		color: #fff;
		letter-spacing: -0.02em;
	}

	.logo-dot {
		color: #44d62c;
	}

	/* Hero */
	.hero {
		max-width: 700px;
		animation: fadeInUp 0.8s ease-out 0.2s backwards;
	}

	/* Enhanced text visibility */
	.title-line {
		text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8), 0 4px 40px rgba(0, 0, 0, 0.6);
	}

	.status-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: rgba(68, 214, 44, 0.1);
		border: 1px solid rgba(68, 214, 44, 0.4);
		border-radius: 100px;
		font-size: 0.875rem;
		color: #44d62c;
		margin-bottom: 1.5rem;
	}

	.status-dot {
		width: 8px;
		height: 8px;
		background: #44d62c;
		border-radius: 50%;
		box-shadow: 0 0 8px #44d62c;
		animation: blink 1s ease-in-out infinite;
	}

	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.2; }
	}

	.title {
		font-size: clamp(2.5rem, 8vw, 4rem);
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.03em;
		margin-bottom: 1.5rem;
	}

	.title-line {
		display: block;
	}

	.gradient-text {
		color: #44d62c;
		text-shadow: 0 0 40px rgba(68, 214, 44, 0.5);
	}

	.subtitle {
		font-size: 1.125rem;
		color: #d4d4d8;
		max-width: 540px;
		margin: 0 auto;
		line-height: 1.7;
		text-shadow: 0 2px 10px rgba(0, 0, 0, 0.6);
	}

	/* Features */
	.features {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
		justify-content: center;
		animation: fadeInUp 0.8s ease-out 0.4s backwards;
	}

	.feature {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #f4f4f5;
		font-size: 0.875rem;
	}

	.feature-icon {
		width: 20px;
		height: 20px;
		color: #44d62c;
	}

	.feature-icon svg {
		width: 100%;
		height: 100%;
	}

	/* Waiting List */
	.waiting-list {
		animation: fadeInUp 0.8s ease-out 0.6s backwards;
	}

	/* Animations */
	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Responsive */
	@media (max-width: 768px) {
		.landing {
			padding-top: 8rem;
		}
	}

	@media (max-width: 640px) {
		.content {
			padding: 1.5rem;
			gap: 1.5rem;
		}

		.logo-text {
			font-size: 1.5rem;
		}

		.features {
			gap: 1rem;
		}
	}
</style>
