---
interface Props {
  id?: string;
  hint?: string;
  highlightHint?: boolean;
}

const { id = 'waitlist', hint = 'Be the first to know when we launch', highlightHint = false } = Astro.props;
const formId = `${id}-form`;
const emailId = `${id}-email`;
const validationId = `${id}-email-validation`;
const btnId = `${id}-btn`;
const messageId = `${id}-message`;
const iframeId = `${id}-iframe`;
---

<div class="waitlist-wrapper">
  <iframe name={iframeId} id={iframeId} style="display:none;"></iframe>

  <form
    class="waitlist-form"
    id={formId}
    action="https://docs.google.com/forms/d/e/1FAIpQLSdmypu25LKFRnerbdorlPk60dvwwFen7YFB2le05cdxkdZvzQ/formResponse"
    method="POST"
    target={iframeId}
  >
    <div class="input-group">
      <input
        type="email"
        name="entry.887339015"
        id={emailId}
        placeholder="Enter your email"
        required
        class="waitlist-input"
      />
      <input type="hidden" name="entry.1769037418" id={validationId} />
      <button type="submit" class="waitlist-button" id={btnId}>
        <span class="btn-text">Join Waitlist</span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14m-7-7l7 7-7 7"/>
        </svg>
      </button>
    </div>
    <p class="form-message" id={messageId}></p>
  </form>
  {hint && <p class:list={["waitlist-hint", { "waitlist-hint--highlight": highlightHint }]}>{hint}</p>}
</div>

<script define:vars={{ formId, emailId, validationId, btnId, messageId, iframeId }}>
  const form = document.getElementById(formId);
  const emailInput = document.getElementById(emailId);
  const validation = document.getElementById(validationId);
  const btn = document.getElementById(btnId);
  const message = document.getElementById(messageId);
  const iframe = document.getElementById(iframeId);

  emailInput.addEventListener('input', () => {
    validation.value = emailInput.value;
  });

  form.addEventListener('submit', (e) => {
    const email = emailInput.value.trim();
    if (!email) {
      e.preventDefault();
      return;
    }

    validation.value = email;

    const btnText = btn.querySelector('.btn-text');
    btnText.textContent = 'Joining...';
    btn.disabled = true;

    iframe.onload = () => {
      message.textContent = 'âœ“ You\'re on the list!';
      message.className = 'form-message success';
      emailInput.value = '';
      validation.value = '';
      btnText.textContent = 'Join Waitlist';
      btn.disabled = false;

      setTimeout(() => {
        message.textContent = '';
        message.className = 'form-message';
      }, 5000);
    };
  });
</script>

<style>
  .waitlist-wrapper {
    width: 100%;
    max-width: 500px;
  }

  .waitlist-form {
    width: 100%;
  }

  .input-group {
    display: flex;
    gap: 0.75rem;
    background: rgba(18, 18, 23, 0.8);
    border: 1px solid rgba(68, 214, 44, 0.3);
    border-radius: 12px;
    padding: 0.5rem;
    transition: all 0.3s ease;
  }

  .input-group:focus-within {
    border-color: rgba(68, 214, 44, 0.6);
    box-shadow: 0 0 0 3px rgba(68, 214, 44, 0.1);
  }

  .waitlist-input {
    flex: 1;
    background: transparent;
    border: none;
    color: #e4e4e7;
    font-size: 1rem;
    padding: 0.75rem 1rem;
    outline: none;
    font-family: inherit;
  }

  .waitlist-input::placeholder {
    color: #52525b;
  }

  .waitlist-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #44d62c, #2ea318);
    color: #0a0a0f;
    font-size: 0.95rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    font-family: inherit;
  }

  .waitlist-button:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 20px rgba(68, 214, 44, 0.4);
  }

  .waitlist-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }

  .waitlist-button svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .waitlist-button:hover:not(:disabled) svg {
    transform: translateX(3px);
  }

  .form-message {
    font-size: 0.875rem;
    margin-top: 0.75rem;
    min-height: 1.25rem;
    transition: all 0.3s ease;
  }

  .form-message.success {
    color: #44d62c;
  }

  .form-message.error {
    color: #ef4444;
  }

  .waitlist-hint {
    font-size: 0.875rem;
    color: #71717a;
    margin-top: 0.75rem;
  }

  .waitlist-hint--highlight {
    color: #44d62c;
    font-weight: 500;
    text-shadow: 0 0 20px rgba(68, 214, 44, 0.4);
  }

  @media (max-width: 640px) {
    .input-group {
      flex-direction: column;
      padding: 0.75rem;
    }

    .waitlist-input {
      padding: 0.75rem;
    }

    .waitlist-button {
      width: 100%;
      justify-content: center;
      padding: 0.875rem 1.5rem;
    }
  }
</style>
