---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());

const categories = [...new Set(allPosts.map(post => post.data.category))];

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(date);
}
---

<Layout
  title="Blog | onprem.in"
  description="Technical insights on self-hosting, on-premise infrastructure, data sovereignty, and enterprise software."
>
  <Navigation />

  <div class="page">
    <div class="bg-grid"></div>
    <div class="bg-glow"></div>

    <main class="container">
      <header class="header">
        <div class="breadcrumb">
          <span class="prompt">root@onprem.in</span>
          <span class="separator">:</span>
          <span class="path">~/blog</span>
          <span class="cursor">$</span>
        </div>

        <h1 class="title">
          <span class="title-symbol">#</span>
          Technical Blog
        </h1>

        <p class="subtitle">
          Deep dives on infrastructure, security, and the art of self-hosting.
          <br />No marketing fluff. Just technical reality.
        </p>
      </header>

      <div class="categories">
        <span class="categories-label">filter:</span>
        {categories.map(category => (
          <button class="category-tag" data-category={category}>
            {category}
          </button>
        ))}
        <button class="category-tag active" data-category="all">
          All
        </button>
      </div>

      <div class="posts-grid">
        {sortedPosts.map((post, index) => (
          <article
            class="post-card"
            style={`--delay: ${index * 0.1}s`}
            data-category={post.data.category}
          >
            <div class="post-meta">
              <span class="category">{post.data.category}</span>
              <span class="date">{formatDate(post.data.publishDate)}</span>
            </div>

            <h2 class="post-title">
              <a href={`/blog/${post.slug}`}>
                {post.data.title}
              </a>
            </h2>

            <p class="post-description">
              {post.data.description}
            </p>

            <div class="post-footer">
              <div class="tags">
                {post.data.tags.slice(0, 3).map(tag => (
                  <span class="tag">#{tag}</span>
                ))}
              </div>

              <a href={`/blog/${post.slug}`} class="read-more">
                read â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    </main>
  </div>
</Layout>

<style>
  .page {
    min-height: 100vh;
    padding-top: 5rem;
    position: relative;
  }

  .bg-grid {
    position: fixed;
    inset: 0;
    background-image:
      linear-gradient(rgba(68, 214, 44, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(68, 214, 44, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
    opacity: 0.5;
  }

  .bg-glow {
    position: fixed;
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(68, 214, 44, 0.15) 0%, transparent 70%);
    top: -200px;
    right: -200px;
    border-radius: 50%;
    filter: blur(100px);
    pointer-events: none;
    animation: float 20s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-50px, 50px); }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .header {
    margin-bottom: 3rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .breadcrumb {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #52525b;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .prompt { color: #44d62c; }
  .separator { color: #71717a; margin: 0 0.5rem; }
  .path { color: #a1a1aa; }

  .cursor {
    color: #44d62c;
    margin-left: 0.5rem;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .title-symbol {
    color: #44d62c;
    font-family: 'JetBrains Mono', monospace;
    margin-right: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: #a1a1aa;
    line-height: 1.7;
  }

  .categories {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
    align-items: center;
    animation: fadeInUp 0.6s ease-out 0.2s backwards;
  }

  .categories-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #71717a;
  }

  .category-tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: #a1a1aa;
    background: rgba(68, 214, 44, 0.05);
    border: 1px solid rgba(68, 214, 44, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .category-tag:hover,
  .category-tag.active {
    color: #44d62c;
    background: rgba(68, 214, 44, 0.1);
    border-color: rgba(68, 214, 44, 0.5);
  }

  .posts-grid {
    display: grid;
    gap: 2rem;
  }

  .post-card {
    background: rgba(18, 18, 23, 0.6);
    border: 1px solid rgba(68, 214, 44, 0.2);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out backwards;
    animation-delay: var(--delay);
  }

  .post-card:hover {
    border-color: rgba(68, 214, 44, 0.5);
    box-shadow: 0 8px 32px rgba(68, 214, 44, 0.1);
    transform: translateY(-2px);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .category {
    color: #44d62c;
    font-weight: 600;
    font-family: 'JetBrains Mono', monospace;
  }

  .date {
    color: #71717a;
    font-family: 'JetBrains Mono', monospace;
  }

  .post-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .post-title a {
    color: #fff;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title a:hover {
    color: #44d62c;
  }

  .post-description {
    color: #a1a1aa;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #71717a;
  }

  .read-more {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #44d62c;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .read-more:hover {
    text-shadow: 0 0 20px rgba(68, 214, 44, 0.5);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .page {
      padding-top: 8rem;
    }

    .container {
      padding: 3rem 1.5rem;
    }

    .post-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const categoryButtons = document.querySelectorAll('.category-tag');
    const postCards = document.querySelectorAll('.post-card');

    categoryButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.getAttribute('data-category');

        categoryButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        postCards.forEach(card => {
          const cardCategory = card.getAttribute('data-category');
          if (category === 'all' || cardCategory === category) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>
