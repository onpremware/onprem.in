---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout
  title="Contact | onprem.in"
  description="Get in touch with onprem.in. Let's discuss how we can help with your on-premise infrastructure needs."
>
  <Navigation />

  <div class="page">
    <div class="bg-grid"></div>
    <div class="bg-glow bg-glow-1"></div>
    <div class="bg-glow bg-glow-2"></div>

    <main class="container">
      <header class="header">
        <div class="breadcrumb">
          <span class="prompt">root@onprem.in</span>
          <span class="separator">:</span>
          <span class="path">~/contact</span>
          <span class="cursor">$</span>
        </div>

        <h1 class="title">
          <span class="title-bracket">[</span>
          Get In Touch
          <span class="title-bracket">]</span>
        </h1>

        <p class="subtitle">
          Ready to take control of your infrastructure? Let's talk about your needs.
        </p>
      </header>

      <div class="form-section">
        <iframe name="hidden-contact-form" id="hidden-contact-form" style="display:none;"></iframe>

        <form
          class="contact-form"
          id="contact-form"
          action="https://docs.google.com/forms/d/e/1FAIpQLScu8i1FR4CJjGjEhzR2fO2cDx92MqwQ5SbDQDi3mOSgTE_qyg/formResponse"
          method="POST"
          target="hidden-contact-form"
        >
          <div class="form-grid">
            <div class="form-group">
              <label for="first-name">
                <span class="label-symbol">$</span>first_name
              </label>
              <input
                type="text"
                name="entry.2005620554"
                id="first-name"
                placeholder="John"
                required
                class="form-input"
              />
            </div>

            <div class="form-group">
              <label for="last-name">
                <span class="label-symbol">$</span>last_name
              </label>
              <input
                type="text"
                name="entry.115527566"
                id="last-name"
                placeholder="Doe"
                required
                class="form-input"
              />
            </div>

            <div class="form-group">
              <label for="email">
                <span class="label-symbol">$</span>email
              </label>
              <input
                type="email"
                name="entry.1045781291"
                id="email"
                placeholder="john@company.com"
                required
                class="form-input"
              />
            </div>

            <div class="form-group">
              <label for="phone">
                <span class="label-symbol">$</span>phone
              </label>
              <input
                type="tel"
                name="entry.779213993"
                id="phone"
                placeholder="+1 (555) 123-4567"
                required
                class="form-input"
              />
            </div>

            <div class="form-group full-width">
              <label for="company">
                <span class="label-symbol">$</span>company
              </label>
              <input
                type="text"
                name="entry.1513560672"
                id="company"
                placeholder="Acme Inc."
                required
                class="form-input"
              />
            </div>

            <div class="form-group full-width">
              <label for="message">
                <span class="label-symbol">$</span>message
              </label>
              <textarea
                name="entry.839337160"
                id="message"
                placeholder="Tell us about your infrastructure needs, current challenges, or any questions you have..."
                required
                class="form-input form-textarea"
                rows="5"
              ></textarea>
            </div>
          </div>

          <div class="form-footer">
            <label class="consent-checkbox">
              <input type="checkbox" id="consent-check" />
              <span class="checkmark"></span>
              <span class="consent-text">
                I agree to the <a href="/privacy">Privacy Policy</a> and <a href="/terms">Terms of Service</a>
              </span>
            </label>

            <button type="submit" class="submit-button" id="submit-btn" disabled>
              <span class="btn-text">Send Message</span>
              <span class="btn-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
                </svg>
              </span>
            </button>
            <p class="form-message" id="form-message"></p>
          </div>
        </form>

        <div class="contact-info">
          <div class="info-card">
            <div class="info-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="info-content">
              <span class="info-label">Email</span>
              <a href="mailto:hello@onprem.in" class="info-value">hello@onprem.in</a>
            </div>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
              </svg>
            </div>
            <div class="info-content">
              <span class="info-label">Response Time</span>
              <span class="info-value">Within business hours</span>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    const contactForm = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const formMessage = document.getElementById('form-message') as HTMLParagraphElement;
    const hiddenFrame = document.getElementById('hidden-contact-form') as HTMLIFrameElement;
    const consentCheck = document.getElementById('consent-check') as HTMLInputElement;

    consentCheck.addEventListener('change', () => {
      submitBtn.disabled = !consentCheck.checked;
    });

    contactForm.addEventListener('submit', (e) => {
      const firstName = (document.getElementById('first-name') as HTMLInputElement).value.trim();
      const lastName = (document.getElementById('last-name') as HTMLInputElement).value.trim();
      const email = (document.getElementById('email') as HTMLInputElement).value.trim();
      const phone = (document.getElementById('phone') as HTMLInputElement).value.trim();
      const company = (document.getElementById('company') as HTMLInputElement).value.trim();
      const message = (document.getElementById('message') as HTMLTextAreaElement).value.trim();

      if (!firstName || !lastName || !email || !phone || !company || !message) {
        e.preventDefault();
        formMessage.textContent = 'Please fill in all fields';
        formMessage.className = 'form-message error';
        return;
      }

      submitBtn.disabled = true;
      submitBtn.querySelector('.btn-text')!.textContent = 'Sending...';
      submitBtn.classList.add('loading');
    });

    hiddenFrame.addEventListener('load', () => {
      if (submitBtn.disabled) {
        formMessage.textContent = "Message sent! We'll get back to you soon.";
        formMessage.className = 'form-message success';
        submitBtn.querySelector('.btn-text')!.textContent = 'Sent!';
        submitBtn.classList.remove('loading');
        submitBtn.classList.add('success');

        contactForm.reset();
        consentCheck.checked = false;

        setTimeout(() => {
          formMessage.textContent = '';
          formMessage.className = 'form-message';
          submitBtn.disabled = true;
          submitBtn.querySelector('.btn-text')!.textContent = 'Send Message';
          submitBtn.classList.remove('success');
        }, 5000);
      }
    });
  </script>
</Layout>

<style>
  .page {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    padding-top: 100px;
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(68, 214, 44, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(68, 214, 44, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
  }

  .bg-glow {
    position: absolute;
    width: 600px;
    height: 600px;
    border-radius: 50%;
    filter: blur(120px);
    pointer-events: none;
  }

  .bg-glow-1 {
    top: -200px;
    right: -200px;
    background: rgba(68, 214, 44, 0.08);
  }

  .bg-glow-2 {
    bottom: -200px;
    left: -200px;
    background: rgba(68, 214, 44, 0.05);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .breadcrumb {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #71717a;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
  }

  .prompt {
    color: #44d62c;
  }

  .separator {
    color: #a1a1aa;
  }

  .path {
    color: #60a5fa;
  }

  .cursor {
    color: #a1a1aa;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 600;
    color: #fff;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .title-bracket {
    color: #44d62c;
    font-weight: 400;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #a1a1aa;
    max-width: 500px;
    margin: 0 auto;
  }

  .form-section {
    display: grid;
    gap: 3rem;
  }

  .contact-form {
    background: rgba(17, 17, 22, 0.8);
    border: 1px solid rgba(68, 214, 44, 0.15);
    border-radius: 12px;
    padding: 2.5rem;
    backdrop-filter: blur(8px);
  }

  .form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  .form-group label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #a1a1aa;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .label-symbol {
    color: #44d62c;
  }

  .form-input {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1rem;
    color: #e4e4e7;
    background: rgba(10, 10, 15, 0.8);
    border: 1px solid rgba(68, 214, 44, 0.2);
    border-radius: 8px;
    padding: 0.875rem 1rem;
    outline: none;
    transition: all 0.3s ease;
  }

  .form-input::placeholder {
    color: #52525b;
  }

  .form-input:focus {
    border-color: #44d62c;
    box-shadow: 0 0 0 3px rgba(68, 214, 44, 0.1), 0 0 20px rgba(68, 214, 44, 0.1);
  }

  .form-input:hover:not(:focus) {
    border-color: rgba(68, 214, 44, 0.4);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }

  .form-footer {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  .consent-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: #a1a1aa;
    line-height: 1.5;
    user-select: none;
  }

  .consent-checkbox input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
  }

  .checkmark {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    background: rgba(10, 10, 15, 0.8);
    border: 1px solid rgba(68, 214, 44, 0.3);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    margin-top: 1px;
  }

  .consent-checkbox:hover .checkmark {
    border-color: #44d62c;
  }

  .consent-checkbox input:checked ~ .checkmark {
    background: #44d62c;
    border-color: #44d62c;
  }

  .checkmark::after {
    content: '';
    display: none;
    width: 5px;
    height: 10px;
    border: solid #0a0a0f;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
    margin-bottom: 2px;
  }

  .consent-checkbox input:checked ~ .checkmark::after {
    display: block;
  }

  .consent-text {
    flex: 1;
  }

  .consent-text a {
    color: #44d62c;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .consent-text a:hover {
    text-decoration: underline;
    text-shadow: 0 0 8px rgba(68, 214, 44, 0.5);
  }

  .submit-button {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    font-weight: 500;
    color: #0a0a0f;
    background: #44d62c;
    border: 2px solid #44d62c;
    border-radius: 8px;
    padding: 1rem 2.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .submit-button:hover:not(:disabled) {
    background: transparent;
    color: #44d62c;
    box-shadow: 0 0 30px rgba(68, 214, 44, 0.3);
  }

  .submit-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .submit-button.loading {
    background: rgba(68, 214, 44, 0.2);
    border-color: rgba(68, 214, 44, 0.5);
    color: #44d62c;
  }

  .submit-button.success {
    background: #44d62c;
    color: #0a0a0f;
  }

  .btn-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-icon svg {
    width: 100%;
    height: 100%;
  }

  .form-message {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    text-align: center;
    min-height: 1.5rem;
  }

  .form-message.success {
    color: #44d62c;
  }

  .form-message.error {
    color: #ef4444;
  }

  .contact-info {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .info-card {
    background: rgba(17, 17, 22, 0.6);
    border: 1px solid rgba(68, 214, 44, 0.1);
    border-radius: 10px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
  }

  .info-card:hover {
    border-color: rgba(68, 214, 44, 0.3);
    background: rgba(17, 17, 22, 0.8);
  }

  .info-icon {
    width: 48px;
    height: 48px;
    background: rgba(68, 214, 44, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .info-icon svg {
    width: 24px;
    height: 24px;
    color: #44d62c;
  }

  .info-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .info-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #71717a;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-value {
    font-size: 1rem;
    color: #e4e4e7;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a.info-value:hover {
    color: #44d62c;
  }

  @media (max-width: 640px) {
    .container {
      padding: 1.5rem;
    }

    .form-grid {
      grid-template-columns: 1fr;
    }

    .contact-form {
      padding: 1.5rem;
    }

    .contact-info {
      grid-template-columns: 1fr;
    }

    .header {
      margin-bottom: 2.5rem;
    }

    .title {
      font-size: 2rem;
    }

    .submit-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
