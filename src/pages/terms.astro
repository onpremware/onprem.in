<style>
  .page {
    min-height: 100vh;
    padding-top: 5rem;
    position: relative;
  }

  .bg-grid {
    position: fixed;
    inset: 0;
    background-image:
      linear-gradient(rgba(68, 214, 44, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(68, 214, 44, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
    opacity: 0.5;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .header {
    margin-bottom: 3rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .breadcrumb {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #52525b;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .prompt { color: #44d62c; }
  .separator { color: #71717a; margin: 0 0.5rem; }
  .path { color: #a1a1aa; }

  .cursor {
    color: #44d62c;
    margin-left: 0.5rem;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .last-updated {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: #71717a;
  }

  .last-updated .label {
    color: #44d62c;
  }

  .legal-content {
    animation: fadeInUp 0.6s ease-out 0.2s backwards;
  }

  .legal-section {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(68, 214, 44, 0.1);
  }

  .legal-section:last-child {
    border-bottom: none;
  }

  .legal-section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #fff;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legal-section h2::before {
    content: '#';
    color: #44d62c;
    font-family: 'JetBrains Mono', monospace;
  }

  .legal-section p {
    color: #a1a1aa;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .legal-section p:last-child {
    margin-bottom: 0;
  }

  .legal-section ul {
    list-style: none;
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .legal-section ul li {
    color: #a1a1aa;
    line-height: 1.8;
    margin-bottom: 0.5rem;
    position: relative;
  }

  .legal-section ul li::before {
    content: '→';
    color: #44d62c;
    position: absolute;
    left: -1.5rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .legal-section strong {
    color: #e4e4e7;
  }

  .legal-section a {
    color: #44d62c;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .legal-section a:hover {
    text-shadow: 0 0 10px rgba(68, 214, 44, 0.5);
  }

  .contact-block {
    background: rgba(18, 18, 23, 0.6);
    border: 1px solid rgba(68, 214, 44, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 1rem;
  }

  .contact-block p {
    margin-bottom: 0.5rem;
  }

  .contact-block p:last-child {
    margin-bottom: 0;
  }

  .nav-links {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(68, 214, 44, 0.2);
    animation: fadeInUp 0.6s ease-out 0.4s backwards;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #44d62c;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    gap: 0.75rem;
    text-shadow: 0 0 20px rgba(68, 214, 44, 0.5);
  }

  .link-icon {
    transition: transform 0.3s ease;
  }

  .nav-link:hover .link-icon {
    transform: translateX(4px);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .page {
      padding-top: 8rem;
    }

    .container {
      padding: 3rem 1.5rem;
    }

    .legal-section ul {
      padding-left: 1.25rem;
    }
  }
</style>
